.textDesc {
  text-align: center;
}

.textDesc label {
  display: block;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.scrollContanier {
  white-space: nowrap;
  display: flex;
}

.container-cat {
  display: inline-block;
  padding: 15rpx;
}

.container-cat image {
  width: 150rpx;
  height: 150rpx;
}


.catalog {
  text-align: center;
  margin: 10rpx 0;
}
.catalog text {
  font-size:45rpx;
  color:#668800;
  font-family: KaiTi;
}

.showContainer {
  display: flex;
  width: 100%;
  height: 250rpx;
}
.singleContainer {
  flex: 1;
  text-align: center;
}
.singleContainer image {
  width: 100%;
  height: 70%;
  border: 1rpx #fff solid;
  border-radius: 25rpx;
}
.singleContainer text {
  color:#000;
  font: bold;
  font-family: STXihei;
  font-size:35rpx;
}

.special image {
  width: 80%;
  height: 70%;
  margin-left:45rpx;
}